@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <table border="1">
        <br />
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Name</th>
            <th>Redaction</th>
            <th>Pages</th>
            <th>Summary</th>
            <th>Location</th>
            <th>IsAvailable</th>
        </tr>
        @foreach (BookViewModel book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Author</td>
                <td>@book.Name</td>
                <td>@book.Redaction</td>
                <td>@book.Pages</td>
                <td>@book.Summary</td>
                <td>@book.Location</td>
                <td>@book.IsAvailable</td>
            </tr>
        }
    </table>
</div>
